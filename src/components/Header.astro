---
import HamburguerMenu from "./HamburguerMenu.astro";
const anchors = [
  {
    label: "cyber eye",
    route: "#cybereye",
  },
  {
    label: "eri bot",
    route: "#eribot",
  },
  {
    label: "nosotros",
    route: "#nosotros",
  },
];
---

<header
  class="py-6 px-8 flex items-center fixed top-0 w-full justify-between z-40 text-white bg-gradient-to-b from-white/25 via-white/10 to-transparent"
>
  <a href="/"><img src="/logoblanco.png" alt="logo-techinn" width="125" /></a>

  <nav class="hidden md:block">
    <ul
      class="flex text-2xl uppercase [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2"
    >
      {
        anchors.map((anchor) => (
          <li>
            <a href={anchor.route}>{anchor.label}</a>
          </li>
        ))
      }
    </ul>
  </nav>
  <div class="cursor-pointer md:hidden">
    <HamburguerMenu />
  </div>
</header>
